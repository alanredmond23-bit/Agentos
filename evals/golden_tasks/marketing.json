        "includes_preview_text": true,
        "includes_ctas": true,
        "personalization_tokens": true
      },
      "evaluation_criteria": [
        "subject_lines_compelling",
        "progressive_engagement_strategy",
        "ctas_are_specific_and_actionable",
        "personalization_used_effectively",
        "unsubscribe_compliant"
      ],
      "difficulty": "medium",
      "timeout_ms": 60000,
      "tags": ["email", "onboarding", "drip_campaign"]
    },
    {
      "id": "marketing_005",
      "agent": "agent.marketing.analytics.v1",
      "name": "Analyze Campaign Performance",
      "input": {
        "campaign_name": "Black Friday 2024",
        "channels": ["email", "paid_social", "display", "search"],
