      },
      "expected_output": {
        "type": "twitter_thread",
        "tweet_count": 8,
        "each_tweet_max_chars": 280,
        "includes_emoji": true,
        "includes_call_to_action": true
      },
      "evaluation_criteria": [
        "hook_tweet_is_engaging",
        "features_explained_simply",
        "builds_narrative_arc",
        "cta_is_clear",
        "hashtags_used_appropriately"
      ],
      "difficulty": "easy",
      "timeout_ms": 30000,
      "tags": ["social_media", "twitter", "product_launch"]
    },
    {
      "id": "marketing_004",
      "agent": "agent.marketing.email.v1",
      "name": "Create Welcome Email Sequence",
      "input": {
        "product": "SaaS Analytics Platform",
