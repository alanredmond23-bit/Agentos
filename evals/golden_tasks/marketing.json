{
  "pack": "marketing",
  "version": "1.0.0",
  "description": "Golden tasks for marketing agents - content creation, SEO, social media, email campaigns, and analytics",
  "tasks": [
    {
      "id": "marketing_001",
      "agent": "agent.marketing.content_writer.v1",
      "name": "Write SEO Blog Post",
      "input": {
        "topic": "How AI is Transforming Customer Support in 2025",
        "target_keywords": ["ai customer support", "chatbot automation", "customer service ai"],
        "word_count": 1800,
        "tone": "professional_friendly",
        "target_audience": "b2b_decision_makers",
        "include_cta": true
      },
      "expected_output": {
        "type": "blog_post",
        "min_word_count": 1600,
        "max_word_count": 2000,
        "includes_meta_description": true,
        "includes_headings": true,
        "keyword_density_range": [0.01, 0.03]
      },
      "evaluation_criteria": [
        "keyword_optimization_appropriate",
        "headings_use_keywords_naturally",
        "content_is_original_and_valuable",
        "cta_is_compelling",
        "readability_score_above_60"
      ],
      "difficulty": "medium",
      "timeout_ms": 90000,
      "tags": ["blog", "seo", "ai", "content"]
    },
    {
      "id": "marketing_002",
      "agent": "agent.marketing.seo.v1",
      "name": "Conduct Keyword Research",
      "input": {
        "seed_keywords": ["project management software", "team collaboration tool"],
        "competitor_domains": ["asana.com", "monday.com", "notion.so"],
        "target_market": "US",
        "difficulty_preference": "medium"
      },
      "expected_output": {
        "type": "keyword_research_report",
        "min_keywords": 50,
        "includes_search_volume": true,
        "includes_difficulty_score": true,
        "includes_cpc": true,
        "clustered_by_intent": true
      },
      "evaluation_criteria": [
        "keywords_are_relevant",
        "mix_of_head_and_long_tail",
        "intent_classification_accurate",
        "competitor_gaps_identified",
        "actionable_recommendations_included"
      ],
      "difficulty": "medium",
      "timeout_ms": 60000,
      "tags": ["seo", "keyword_research", "competitive_analysis"]
    },
    {
      "id": "marketing_003",
      "agent": "agent.marketing.social_media.v1",
      "name": "Create Product Launch Twitter Thread",
